<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_ip_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter IP address"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/et_start_port"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Start port"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_ip_address"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/et_end_port"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="End port"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_start_port"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btn_scan_ports"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Scan Ports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_end_port"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/tv_results"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:background="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_scan_ports"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
